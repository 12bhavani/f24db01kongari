            button.btn( class="btn-primary ml-1", onclick= destination) Update   <br>
            button.btn( class="btn-danger ml-1", onclick= delete_destination) Delete   <br>
            button.btn( class="btn-secondary ml-1", onclick= detail_destination) Detail   <br>
  script.
